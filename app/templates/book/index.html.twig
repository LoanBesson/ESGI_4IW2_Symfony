{% extends 'base.html.twig' %}

{% block title %}Liste des livres!{% endblock %}

{% block body %}
    <h1>Liste des livres <a href="{{ path('book_new') }}" class="btn">Cr√©er</a></h1>

    {% for book in books %}
        Titre : {{ book.name|capitalize }} <br>
        Description : {{ book.description ? book.description : 'NC' }}<br>
        Prix moyen : {{ book.averagePrice ? book.averagePrice : 'NC' }}<br>
        Date de publication : {{ book.publicationDate ? book.publicationDate|date('d/m/Y') : 'NC' }}<br>
        <a href="{{ path('book_show', {id: book.id}) }}" class="btn">Voir</a>
        <a href="{{ path('book_edit', {id: book.id}) }}" class="btn">Modifier</a>
        <a href="{{ path('book_delete', {id: book.id}) }}" class="btn bg-danger">Supprimer</a><br>
        <br>
    {% endfor %}
{% endblock %}
